---
import Navbar from "./Navbar.astro";
import MobileMenu from "./MobileMenu.svelte";
---

<header
  class="sticky top-0 z-20 w-full mb-10 shadow-md sm:mb-14 bg-ac-dark/90 backdrop-blur-sm"
>
  <div
    class="flex items-center justify-between max-w-7xl px-4 py-1 mx-auto sm:px-8"
  >
    <a href="/" class="block">
      <img
        src="https://res.cloudinary.com/marioperezhurtado/image/upload/v1739435867/arbicuir/iso-30.webp"
        alt="Arbicuir logo"
        class="w-16"
      />
    </a>
    <nav class="flex items-center justify-end w-full gap-4 pt-1 lg:gap-10">
      <Navbar />
      <MobileMenu client:media="(max-width: 767px)" />
    </nav>
  </div>
</header>
