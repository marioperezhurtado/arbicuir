---
import cards from "@/content/cards.json";
---

<div class="relative pt-2 pl-10 w-60 h-52">
  <div
    class="overflow-hidden absolute top-4 left-20 w-32 h-44 rounded-md shadow-md transition duration-300 origin-bottom rotate-12 hover:rotate-18"
  >
    <img src={cards[3]?.url} alt={cards[3]?.title} class="w-full h-full" />
  </div>
  <div
    class="overflow-hidden absolute left-16 w-32 h-44 rounded-md shadow-md transition duration-300 origin-bottom rotate-6 hover:rotate-12"
  >
    <img src={cards[2]?.url} alt={cards[2]?.title} class="w-full h-full" />
  </div>
  <div
    class="overflow-hidden absolute left-12 w-32 h-44 rounded-md shadow-md transition duration-300 origin-bottom -rotate-6 hover:rotate-0"
  >
    <img src={cards[1]?.url} alt={cards[1]?.title} class="w-full h-full" />
  </div>
  <div
    class="overflow-hidden absolute top-4 left-8 w-32 h-44 rounded-md shadow-md transition duration-300 origin-bottom -rotate-12"
  >
    <img src={cards[0]?.url} alt={cards[0]?.title} class="w-full h-full" />
  </div>
</div>
